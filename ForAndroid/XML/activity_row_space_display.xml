<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    tools:context="com.myblueshare.matrixcalculator.matrixcalculator.RowSpaceDisplay">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is the Result: "
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:text="{"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_below="@+id/textView50"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="}"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/textView51"
            android:layout_alignBottom="@+id/textView51"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There is nothing in the Column Space therefore, the set is empty"
            android:textColor="#ff0000"
            android:visibility="invisible"
            android:layout_below="@+id/textView50"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/vertical4"
            android:layout_width="650px"
            android:layout_height="700px"
            android:orientation="vertical"
            android:layout_below="@+id/textView53"
            android:layout_centerHorizontal="true"></LinearLayout>

        <Button
            android:id="@+id/button50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Again"
            android:onClick="calcAgain"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_below="@+id/vertical4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

        <Button
            android:id="@+id/button51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:layout_below="@+id/vertical4"
            android:onClick="backToMenu"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/button50"
            android:layout_toEndOf="@+id/button50"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
